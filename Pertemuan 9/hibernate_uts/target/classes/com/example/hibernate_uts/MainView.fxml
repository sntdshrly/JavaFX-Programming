<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="485.0" prefWidth="1086.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hibernate_uts.controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox>
        <VBox prefHeight="400.0" prefWidth="213.0">
            <children>
                <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                    <Label text="Filter by Genre : " />
                    <ComboBox fx:id="cmbGenre" maxWidth="1.7976931348623157E308" onAction="#changeCombo" HBox.hgrow="ALWAYS" />
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </HBox>
                <VBox prefHeight="344.0" prefWidth="213.0">
                    <children>
                        <ListView fx:id="lvUser" onMouseClicked="#filterWatchList">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </VBox.margin>
                        </ListView>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#AddUserAction" text=" Add User">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </VBox.margin>
                        </Button>
                        <Button layoutX="15.0" layoutY="324.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#DelUserAction" text="Delete User">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </children>
        </VBox>
        <TableView fx:id="table1" prefHeight="400.0" prefWidth="261.0" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </HBox.margin>
            <columns>
                <TableColumn fx:id="titleCol" prefWidth="212.80000913143158" text="Movie Title" />
                <TableColumn fx:id="genreCol" prefWidth="124.0" text="Genre" />
                <TableColumn fx:id="durasiCol" prefWidth="84.0" text="Durasi" />
            </columns></TableView>
        <VBox prefHeight="395.0" prefWidth="403.0">
            <children>
                <TableView fx:id="table2" prefHeight="315.0" prefWidth="319.0">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                    <columns>
                        <TableColumn fx:id="lastTitleCol" prefWidth="192.79998761415482" text="Movie Title" />
                        <TableColumn fx:id="lastWatchCol" prefWidth="117.5999755859375" text="Last Watch" />
                        <TableColumn fx:id="isFavoriteCol" prefWidth="81.60003662109375" text="Is Favorite" />
                    </columns>
                </TableView>
            </children>
        </VBox>

    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="5.0">
        <Button maxWidth="1.7976931348623157E308" onAction="#printReport" text="Print Report!" HBox.hgrow="ALWAYS" />
        <VBox.margin>
            <Insets top="5.0" />
        </VBox.margin>

    </HBox>
</VBox>